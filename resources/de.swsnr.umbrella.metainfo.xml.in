<?xml version='1.0' encoding='utf-8'?>
<component type="desktop-application">
    <id>de.swsnr.umbrella</id>
    <metadata_license>CC0-1.0</metadata_license>
    <name>Umbrella</name>
    <summary>Backup your data with restic</summary>
    <description>
        <p>
            Backup your home directory with restic to protect your personal data against hardware
            damage, accidential deletion, and other risks.
        </p>
        <p>
            Umbrella offers a quick and easy way to routinely backup your home directory
            with restic. It targets users who are familiar with restic and its concepts, and have
            used the restic command line already, and now seek a convenient way to back up their
            personal data into existing restic repositories without reaching for the command line.
        </p>
    </description>
    <categories>
        <category>Utility</category>
    </categories>
    <keywords>
        <keyword translate="no">restic</keyword>
        <keyword>Backup</keyword>
    </keywords>
    <!-- TODO: Bugtracker and help URLs for Github discussions -->
    <!-- TODO: Translate URL for translate.codeberg.org -->
    <url type="homepage">https://github.com/swsnr/umbrella</url>
    <url type="contact">https://swsnr.de/</url>
    <url type="vcs-browser">https://github.com/swsnr/umbrella</url>
    <launchable type="desktop-id">de.swsnr.umbrella.desktop</launchable>
    <releases>
